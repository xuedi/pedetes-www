	<!-- Fixed navbar -->
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">##url##</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li {% if active=='index' %}class="active"{% endif %}><a href="/">##home##</a></li>
					<li {% if active=='about' %}class="active"{% endif %}><a href="/about">##about##</a></li>
					{% if tplUserRole==3 %}
					    <li {% if active=='admin' %}class="active"{% endif %}><a href="/admin">##admin##</a></li>
					{% endif %}
				</ul>
				<ul class="nav navbar-nav navbar-right languageBox">
					<li class="dropdown" >
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-clicked="false">
							<i class="fa fa-globe"></i> 
							##languages## 
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu" role="menu">
                        {% for item in tplLanguageList %}
							<li>
								<a class="languageSwitch" id="{$tplLanguageList[it].language}" href="/ajax/language?lang={{ item.language }}">
									<span class="line">
										<span class="right">
                                            {{ item.native }}
										</span>
										<span class="left">
											{% if tplLanguageListActive == item.language %}
												<i class="fa fa-check"></i>
											{% endif %}
                                            {{ item.name }}
										</span>
									</span>
								</a>
							</li>
                        {% endfor %}
						</ul>
					</li>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
